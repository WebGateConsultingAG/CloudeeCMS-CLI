{
  "extends": "eslint:recommended",
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
